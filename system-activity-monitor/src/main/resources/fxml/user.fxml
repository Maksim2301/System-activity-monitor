<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.controller.UserController"
            stylesheets="@/css/app.css">

    <top>
        <Label text="User Management"
               style="-fx-font-size: 20px; -fx-padding: 10;"
               BorderPane.alignment="CENTER"/>
    </top>

    <center>
        <VBox spacing="10" alignment="CENTER" style="-fx-padding: 25;">

            <Label text="Register" style="-fx-font-weight: bold;"/>
            <TextField fx:id="registerUsername" promptText="Username" prefWidth="200"/>
            <PasswordField fx:id="registerPassword" promptText="Password" prefWidth="200"/>
            <TextField fx:id="registerEmail" promptText="Email" prefWidth="200"/>
            <Button text="Register" onAction="#registerUser"/>

            <Separator style="-fx-padding: 10 0 10 0;"/>

            <Label text="Login" style="-fx-font-weight: bold;"/>
            <TextField fx:id="loginUsername" promptText="Username" prefWidth="200"/>
            <PasswordField fx:id="loginPassword" promptText="Password" prefWidth="200"/>
            <Button text="Login" onAction="#loginUser"/>

            <Button text="Continue as Guest"
                    onAction="#loginAsGuest"
                    style="-fx-font-size: 14px; -fx-text-fill: #2a73ff; -fx-underline: true;"/>

            <Separator style="-fx-padding: 10 0 10 0;"/>

            <Label text="Change Password" style="-fx-font-weight: bold;"/>
            <PasswordField fx:id="oldPassword" promptText="Old password" prefWidth="200"/>
            <PasswordField fx:id="newPassword" promptText="New password" prefWidth="200"/>
            <Button text="Change Password" onAction="#changePassword"/>

            <Button text="Delete My Account"
                    onAction="#deleteMyAccount"
                    style="-fx-background-color: #ff4d4d; -fx-text-fill: white;"/>

            <Separator style="-fx-padding: 10 0 10 0;"/>

            <Button text="Back to Main" onAction="#goBack" style="-fx-font-size: 13px;"/>

            <Label fx:id="messageLabel" textFill="red" wrapText="true" prefWidth="300"/>
        </VBox>
    </center>
</BorderPane>
